	<select id="getRolePermission" resultType="string">
		select rp.permission from role_permission rp
		where rp .role_id=#{roleId}
	</select>
	
	<select id="queryRoleOptions" resultType="Option">
		select r.id val, r.roleDesc text
		 from role r where r.roleName!='admin'
	</select>
	
	<select id="findBossId" resultType="string">
		select ur.user_id
		from user_role ur
		left join user u on u.id=ur.user_id
		left join role r on r.id=ur.role_id
		where r.roleName = 'boss'
	</select>
	
	
	
	
	
	
	
	
	
	
	
	
	
